root = true

[*]
  indent_style = space
  indent_size = 2
  end_of_line = lf
  charset = utf-8
  trim_trailing_whitespace = true
  insert_final_newline = true


[{.babelrc,.stylelintrc,jest.config,.eslintrc,.prettierrc,.compilerc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
    indent_style=space
    indent_size=2

[*.js]
    indent_style=space
    indent_size=2

[{.analysis_options,*.yml,*.yaml}]
    indent_style=space
    indent_size=2

[*.md]
  trim_trailing_whitespace = false
